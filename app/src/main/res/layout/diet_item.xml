<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        app:cardBackgroundColor="#FFFFFF"
        app:cardElevation="3dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:cardBackgroundColor="#FFFFFF"
            android:id="@+id/dietRecordLayout">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true">

                <ImageView
                    android:id="@+id/expandImage"
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/snack_food" />

                <TextView
                    android:id="@+id/dietName"
                    android:layout_below="@+id/expandImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diet Name" />

                <TextView
                    android:id="@+id/dietTypePrefix"
                    android:layout_below="@+id/dietName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type:" />

                <TextView
                    android:id="@+id/dietType"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/dietName"
                    android:layout_toRightOf="@+id/dietTypePrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type Value" />

                <TextView
                    android:id="@+id/dietCaloriesPrefix"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/dietName"
                    android:layout_toRightOf="@+id/dietType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories:" />

                <TextView
                    android:id="@+id/dietCalories"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/dietName"
                    android:layout_toRightOf="@+id/dietCaloriesPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories Value" />

                <TextView
                    android:id="@+id/dietDurationPrefix"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/dietName"
                    android:layout_toRightOf="@+id/dietCalories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration:" />

                <TextView
                    android:id="@+id/dietDuration"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/dietName"
                    android:layout_toRightOf="@+id/dietDurationPrefix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration Value" />

                <TextView
                    android:id="@+id/dietDescription"
                    android:layout_below="@+id/dietType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diet Description" />


            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
